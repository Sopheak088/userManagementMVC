@model IEnumerable<iThinking.UserCenter.Identity.ApplicationError>
@using WebMvc.Helpers;

@{
    ViewBag.Title = "Errors";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @ViewBag.Title
        <small>Error/Index</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">System</a></li>
        <li class="active">Errors</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">Search</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">

                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    Maximum data displayed is 1,0000 records. If you want to find more, please enter your search keywords.
                </div>
            </div>
            <!-- /.box -->

            <div class="box">
                <div class="box-header">
                    <div class="col-md-10">
                        <h3 class="box-title">Error list</h3>
                    </div>
                    <div class="col-md-2">
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Message</th>
                                <th>Created date</th>
                                <th>Created by</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Message</td>
                                    <td>@item.CreatedDate.ToString("dd/MM/yyyy hh:MM")</td>
                                    <td>@item.CreatedBy</td>
                                    <td>
                                        <a title="Details" href="@Url.Content("~/Error/Details/")@item.Id" class="btn btn-xs btn-default"><i class="fa fa-fw fa-info"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Message</th>
                                <th>Created date</th>
                                <th>Created by</th>
                                <th>Actions</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->