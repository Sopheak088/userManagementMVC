@model iThinking.ViewModel.Identity.UserDetailViewModel
@using WebMvc.Helpers;

@{
    ViewBag.Title = "Details";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @ViewBag.Title
        <small>User/Details</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">User management</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-default">
                <div class="box-header">
                    <div class="col-md-8">
                        <h3 class="box-title">User information</h3>
                    </div>
                    <div class="col-md-4">
                        <a title="Edit" href="@Url.Content("~/User/Edit/")@Model.Id" class="btn btn-xs btn-primary"><i class="fa fa-fw fa-pencil"></i></a>
                        @Html.NoEncodeActionLink("<i class='fa fa-fw fa-close'></i>","Delete", "Delete", "User", new { id = Model.Id },
                        new { onclick = "return confirm('Are you sure you wish to delete this item?');", @class = "btn btn-xs btn-danger" })
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col" colspan="2" width="50%"></th>
                                <th scope="col" colspan="2"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Id)</th>
                                <td>@Html.DisplayFor(model => model.Id)</td>
                                <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                                <td>@Html.DisplayFor(model => model.FirstName)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.LastName)</th>
                                <td>@Html.DisplayFor(model => model.LastName)</td>
                                <th>@Html.DisplayNameFor(model => model.UserName)</th>
                                <td>@Html.DisplayFor(model => model.UserName)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Email)</th>
                                <td>@Html.DisplayFor(model => model.Email)</td>
                                <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                                <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Address)</th>
                                <td colspan="3">@Html.DisplayFor(model => model.Address)</td>
                            </tr>
                            <tr>
                                <th>Groups</th>
                                <td colspan="3">
                                    @foreach (var item in Model.GroupsList)
                                    {
                                        <p>@item.Text</p>
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <br />
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->